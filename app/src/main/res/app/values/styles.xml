<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- TEXT FIELDS -->
    <style name="EditTextCommon" parent="Base.V12.Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/text_normal</item>
        <!--item name="android:textCursorDrawable">@color/clLightGrey</item-->
    </style>

    <style name="TextViewCommon">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:drawablePadding">@dimen/md_padding_double</item>
    </style>

    <!-- TEXT FIELDS: ITEM -->
    <style name="ItemTitleTextView">
        <item name="android:textSize">@dimen/text_bigger</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/title_text_view_padding</item>
    </style>

    <style name="ItemContentTextView">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">@dimen/title_text_view_padding</item>
    </style>

    <style name="ItemDateTextView">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/clBlueGrey</item>
        <item name="android:padding">@dimen/title_text_view_padding</item>
    </style>

</resources>
